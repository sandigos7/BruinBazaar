rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper: user is authenticated with UCLA email
    function isUCLAUser() {
      return request.auth != null &&
        (request.auth.token.email.matches('.*@ucla\\.edu$') ||
         request.auth.token.email.matches('.*@g\\.ucla\\.edu$'));
    }

    // Helper: user owns the resource (by userId)
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Users: read by any UCLA user; write only by owner
    match /users/{userId} {
      allow read: if isUCLAUser();
      allow write: if isUCLAUser() && isOwner(userId);
    }

    // Listings: read by UCLA; create only with matching userId; update/delete only by owner
    match /listings/{listingId} {
      allow read: if isUCLAUser();
      allow create: if isUCLAUser() && isOwner(request.resource.data.userId);
      allow update, delete: if isUCLAUser() && isOwner(resource.data.userId);
    }

    // Conversations: read/write only by participants
    match /conversations/{conversationId} {
      allow read: if isUCLAUser() &&
        request.auth.uid in resource.data.participants;
      allow create: if isUCLAUser() &&
        request.auth.uid in request.resource.data.participants;
      allow update: if isUCLAUser() &&
        request.auth.uid in resource.data.participants;

      // Messages: read/write only by conversation participants
      match /messages/{messageId} {
        allow read: if isUCLAUser() &&
          request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants;
        allow create: if isUCLAUser() &&
          request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants &&
          isOwner(request.resource.data.senderId);
        allow update: if isUCLAUser() &&
          request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants;
      }
    }

    // ISOs (In Search Of): same pattern as listings
    match /isos/{isoId} {
      allow read: if isUCLAUser();
      allow create: if isUCLAUser() && isOwner(request.resource.data.userId);
      allow update, delete: if isUCLAUser() && isOwner(resource.data.userId);
    }
  }
}